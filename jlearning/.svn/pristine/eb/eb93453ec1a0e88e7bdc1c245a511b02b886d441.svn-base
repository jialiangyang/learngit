@charset "utf-8";


/*<!--bootstrap 3.3.7--> */

.login-banner {
	background-color: #44de7b;
	position: relative;
}

.login-banner>div {
	border: 1px solid red;
}

.login-banner .jumbotron {
	background-color: inherit;
	height: 200px;
	
}

.login-banner>.container>.jumbotron>.title {
	font-size: 41px;
}

.login-banner>.container>.jumbotron {
	margin-bottom: 40px;
}

.banner-slogan {
	margin-top: 30px;
}

.banner-btn {
	display: grid;
	box-shadow: 5px 7px 10px grey;
	color: white;
	background-color: rgba(0, 0, 0, .25);
}

.banner-btn:hover {
	color: white;
}

.main-content {
	border: 1px solid red;
}

.content-toptab {
	margin-bottom: 15px;
}

.stream-list__item {
	padding: 10px 0;
	height: 60px;
	border-bottom: 1px solid gainsboro;
}

.qa-rank {
	float: left;
	margin-left: 10px;
	border-right: 1px solid gainsboro;
}

.answers-num-tag {
	float: left;
	width: 50px;
	height: 100%;
	text-align: center;
	font-size: 15px;
	background: #34ce73;
	color: white;
}


.views-num-tag {
	float: right;
	width: 50px;
	height: 100%;
	text-align: center;
	font-size: 15px;
}

.summary {
	float: left;
	width: 710px;
	height: 100%;
	padding-left: 15px;
}

.summary>h5 {
	margin-bottom: 0px;
}
.summary>ul span{
	margin: 10px;
}
.jumbotron .glyphicon-menu-up{
	position: absolute;
	right: 24px;
	top: 18px;
	cursor: pointer;
}

